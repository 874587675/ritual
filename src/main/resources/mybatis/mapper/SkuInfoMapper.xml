  <select id="selectAttrValueList" resultType="com.ruoyi.project.business.domain.SkuSaleAttributeValue">
    select ssav.*
      from t_sku_sale_attribute_value as ssav 
    left join t_sku_info as sku on ssav.sku_id = sku.id
    <where>
      <if test="spuId != null">
        sku.spu_id = #{spuId}
      </if>
    </where>
  </select>
