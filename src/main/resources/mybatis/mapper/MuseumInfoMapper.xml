  <select id="selectMuseumInfoDetailByMuseumId" resultMap="MuseumInfoDetailMap">
    select mi.*,
    COUNT(gi.count) as gift_count,
    SUM(IF(item.id = 1, gi.count, 0)) as candle_count,
    COUNT(IF(gi.item_id = 10 and gi.order_status = 2 and gi.expire_time > NOW(),gi,0)) as light_health_count,
    COUNT(IF(gi.item_id = 11 and gi.order_status = 2 and gi.expire_time > NOW(),gi,0)) as light_achievement_count,
    COUNT(IF(gi.item_id = 12 and gi.order_status = 2 and gi.expire_time > NOW(),gi,0)) as light_treasure_count,
    COUNT(IF(gi.item_id = 13 and gi.order_status = 2 and gi.expire_time > NOW(),gi,0)) as light_wealth_count,
    DATEDIFF(
    -- 如果忌日已经过了，则计算下一个忌日
    IF(
    DATE_FORMAT(NOW(), '%m-%d') > DATE_FORMAT(mi.death_date, '%m-%d'),
    CONCAT(YEAR(NOW()) + 1, '-', DATE_FORMAT(mi.death_date, '%m-%d')),
    CONCAT(YEAR(NOW()), '-', DATE_FORMAT(mi.death_date, '%m-%d'))
    ),
    NOW()
    ) as death_days,
    DATEDIFF(
    -- 如果诞辰已经过了，则计算下一个诞辰
    IF(
    DATE_FORMAT(NOW(), '%m-%d') > DATE_FORMAT(mi.birth_date, '%m-%d'),
    CONCAT(YEAR(NOW()) + 1, '-', DATE_FORMAT(mi.birth_date, '%m-%d')),
    CONCAT(YEAR(NOW()), '-', DATE_FORMAT(mi.birth_date, '%m-%d'))
    ),
    NOW()
    ) as birth_days
    from t_museum_info as mi
    left join t_gift_item as gi on mi.id = gi.museum_id
    left join t_item as item on item.id = gi.item_id
    <where>
      <if test="museumId!=null">
        mi.id = #{museumId}
      </if>
    </where>
  </select>
  
  <select id="selectMuseumInfoFamilyByUserId" resultMap="MuseumInfoDetailMap">
    select mi.*,
    COUNT(sp.id) as spirit_position_count
    from t_museum_info as mi
    left join t_spirit_position as sp on mi.id = sp.museum_id
    <where>
      <if test="userId != null and userId != ''">
        and mi.user_id = #{userId}
      </if>
    </where>
  </select>
  
