  <resultMap id="BaseResultMap" type="com.ruoyi.project.business.domain.SkuInfo">
    <!--@mbg.generated-->
    <!--@Table t_sku_info-->
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="spu_id" jdbcType="INTEGER" property="spuId" />
    <result column="category_id" jdbcType="INTEGER" property="categoryId" />
    <result column="brand_id" jdbcType="INTEGER" property="brandId" />
    <result column="sku_default_img" jdbcType="VARCHAR" property="skuDefaultImg" />
    <result column="sku_title" jdbcType="VARCHAR" property="skuTitle" />
    <result column="sku_subtitle" jdbcType="VARCHAR" property="skuSubtitle" />
    <result column="price" jdbcType="DECIMAL" property="price" />
    <result column="origin_price" jdbcType="DECIMAL" property="originPrice" />
