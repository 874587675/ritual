  <update id="updateTodayMuseumInfo">
    UPDATE t_museum_info
    SET status = CASE
                     WHEN DATE(birth_date) = DATE(:date) THEN 1
                     WHEN DATE(death_date) = DATE(:date) THEN 2
                     ELSE status -- 如果都不匹配，则保持原值
      END
    WHERE
      (DATE(birth_date) = DATE(:date)) OR
      (DATE(death_date) = DATE(:date));
  </update>


